{
  "name": "instarank",
  "description": "Earn up to 10,000 followers per month on Instagram with a subscription",
  "private": true,
  "scripts": {
    "build": "pnpm services:prepare:prod && next build",
    "dev": "pnpm services:prepare:dev && pnpm next --port 3132",
    "start": "next start",
    "mail:build": "jsxm handlebars",
    "services:up": "docker-compose up -d",
    "services:stop": "docker-compose down -v",
    "database:migrate:dev": "prisma migrate dev",
    "database:migrate:prod": "prisma migrate deploy",
    "database:generate": "prisma generate",
    "database:seed": "prisma db seed",
    "services:prepare:prod": "pnpm mail:build && pnpm database:generate && pnpm database:migrate:prod && pnpm database:seed",
    "services:prepare:dev": "pnpm mail:build && pnpm services:up && pnpm database:generate && pnpm database:migrate:dev && pnpm database:seed"
  },
  "dependencies": {
    "@jsx-mail/components": "^1.0.3",
    "@prisma/client": "^4.5.0",
    "@stripe/stripe-js": "^1.46.0",
    "axios": "^1.1.3",
    "bcrypt": "^5.1.0",
    "date-fns": "^2.29.3",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "micro": "^10.0.1",
    "next": "12.3.1",
    "next-connect": "^0.13.0",
    "nodemailer": "^6.8.0",
    "pino": "^8.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-facebook-pixel": "^1.0.4",
    "react-hotjar": "^5.4.1",
    "react-toastify": "^9.1.1",
    "react-tooltip": "^5.1.0",
    "request-ip": "^3.3.0",
    "stripe": "^11.5.0",
    "styled-components": "^5.3.5",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@jsx-mail/cli": "1.2.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/styled-components": "^5.1.25",
    "@types/yup": "^0.32.0",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed/index.ts"
  }
}
